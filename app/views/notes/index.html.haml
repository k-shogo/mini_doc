
%table
  %thead
    %tr
      %th
      %th
      %th
  %tbody
    - @notes.each do |note|
      %tr
        %td.note_title= link_to note.title, note_path(note)
        %td= time_ago_in_words note.created_at
        %td
          = link_to 'Edit', edit_note_path(note), class: 'button'
          = link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button'
