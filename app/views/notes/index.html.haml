= simple_form_for @note, url: search_notes_path, method: :get do |f|
  .row.uniform
    .9u
      = f.input_field :title, placeholder: 'search'
    .3u
      = f.button :submit, 'Search', class: 'special'

= paginate @notes

%table
  %thead
    %tr
      %th
      %th
      %th
  %tbody
    - @notes.each do |note|
      %tr
        %td.note_title= link_to note.title, note_path(note)
        %td= time_ago_in_words note.created_at
        %td
          = link_to 'Edit', edit_note_path(note), class: 'button'
          = link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button'

= paginate @notes
